<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 ">
            <h2>Form Ubah Data Contact</h2>
            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                         <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                  </div>
            <% } %>
            <form action="/contact/update" method="post">
                    <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama%>">
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama</label>
                        <input
                            type="text"
                            class="form-control"
                            id="nama"
                            name="nama"
                            aria-describedby="nama"
                            required
                            placeholder="Masukan nama kontak"
                            value="<%= contact.nama%>"
                        >
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            aria-describedby="email"
                            required
                            placeholder="Masukan email address"
                            value="<%= contact.email%>"
                        >
                    </div>
                    <div class="mb-3">
                        <label for="nohp" class="form-label">No HP</label>
                        <input
                            type="number"
                            class="form-control"
                            id="nohp"
                            name="nohp"
                            aria-describedby="nohp"
                            required
                            placeholder="Masukan No HP"
                            value="<%= contact.nohp%>"
                        >
                    </div>
                    <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
            </form>
        </div>
    </div>
</div>
